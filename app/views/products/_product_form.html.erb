<%= form_for product do |f| %>
    <div class="form">
        <%= f.label :product_name %><br>
        <%= f.text_field :name %>
    </div>
    <div class="form">
        <%= f.label :product_price %><br>
        <%= f.number_field :price %>
    </div>
    <div class="form">
        <%= f.label :product_description %><br>
        <%= f.text_area :description %>
    </div>
    <div class="form">
        <%= f.label :product_image_url %><br>
        <%= f.text_area :url %>
    </div>
    <%= f.submit %>
<% end %>