<h1>All Products</h1>
<p><%= link_to "Add Product",new_product_path%></p>
<%@products.each do |product| %>
    <div class="listing">
        <li><div class="content"><%= image_tag(product.url)%> <%=product.name%> | $<%=product.price%> <br> Description: <%= product.description %></div>
        <p><%=link_to "View Product",product_path(product)%> | <%= link_to "Edit Product",edit_product_path(product) %> | <%= link_to "Delete Product",product_path(product),method: :delete, data: {confirm:"Are you sure you want to delete this product?"} %></p></li>
    </div>
<% end %>
