<%= form_for user do |f| %>
    <div class="form">
        <%= f.label :User_name %>
        <%= f.text_field :username %>
    </div>
    <div class="form">
        <%= f.label :User_password %>
        <%= f.password_field :password %>
    </div>
    <div class="form">
        <%= f.label :confirm_password %>
        <%= f.password_field :password_confirmation %>
    </div>
    <div class="form">
        <%= f.label :Are_you_signing_up_as_a_seller? %>
        <%= f.check_box :seller %>
    </div>
    <%= f.submit "Sign Up"%>
<% end %>